@{
    ViewBag.Title = "שכחתי סיסמה";
}

<h2>שכחתי סיסמה</h2>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!-- הוספת השורה הזו -->

    <div>
        <label>אימייל:</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div>
        <label>הזן סיסמה חדשה:</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">שלח סיסמה חדשה</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Message
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
