@model e_Book.Models.User
@{
    ViewBag.Title = "הרשמה";
}
<h2>הרשמה</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>שם:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

        <label>אימייל:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        <label>סיסמה:</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <label>גיל:</label>
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })

        <label>מספר כרטיס אשראי:</label>
        @Html.TextBox("creditCardNumber", null, new { @class = "form-control" })
        @Html.ValidationMessage("CreditCardNumber", "", new { @class = "text-danger" })

        <label>תוקף:</label>
        @Html.TextBox("expiryDate", null, new { @class = "form-control" })
        @Html.ValidationMessage("ExpiryDate", "", new { @class = "text-danger" })

        <label>CVC:</label>
        @Html.TextBox("cvc", null, new { @class = "form-control" })
        @Html.ValidationMessage("CVC", "", new { @class = "text-danger" })

        <br />
        <button type="submit" class="btn btn-primary">הרשמה</button>

    </div>
}
