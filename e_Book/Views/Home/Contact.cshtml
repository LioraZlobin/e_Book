<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>צור קשר</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- כותרת מרכזית -->
    <h1 class="center-title">צור קשר</h1>

    <!-- תוכן ראשי -->
    <div class="contact-container">

        <!-- הודעות למשתמש -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- טופס יצירת קשר -->
        @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <label for="fullName">שם מלא:</label>
            <input type="text" id="fullName" name="fullName" required>

            <label for="email">אימייל:</label>
            <input type="email" id="email" name="email" required>

            <label for="message">הודעה:</label>
            <textarea id="message" name="message" rows="5" required></textarea>

            <button type="submit" class="btn-send">שלח הודעה</button>
        }

        <!-- משוב -->
        <div class="feedback-section">
            <h2>יש לכם משוב?</h2>
            <p>נשמח לשמוע מכם! אנא שתפו אותנו ברעיונות לשיפור או דיווח על בעיות.</p>
            @using (Html.BeginForm("SendFeedback", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <label for="feedback">המשוב שלכם:</label>
                <textarea id="feedback" name="Feedback" rows="4" required></textarea>
                <button type="submit" class="btn-send">שלח משוב</button>
            }
        </div>
    </div>

    <!-- אלמנט ויזואלי -->
    <div class="contact-background">
        <p>ספריית eBook Library כאן כדי לסייע לכם בכל שאלה!</p>
    </div>

    <!-- פוטר -->
    <footer>
        <p>&copy; 2024 - eBook Library Service</p>
    </footer>
</body>
</html>
