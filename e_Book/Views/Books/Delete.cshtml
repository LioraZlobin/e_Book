@model e_Book.Models.Book

@{
    ViewBag.Title = "מחיקת ספר";
}

<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            direction: rtl;
            text-align: right;
            font-family: Arial, sans-serif;
        }

        h2, h3 {
            text-align: center;
            margin: 20px 0;
        }

        table {
            width: 50%;
            margin: 0 auto;
            border-collapse: collapse;
        }

            table th, table td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
                text-align: right;
            }

        .form-actions {
            text-align: center;
            margin-top: 20px;
        }

        .btn-danger, .btn-secondary {
            margin: 5px;
        }

        .checkbox-icon {
            font-size: 20px;
            color: green;
        }
    </style>
</head>
<body>
    <h2>מחיקת ספר</h2>
    <h3>האם אתה בטוח שברצונך למחוק ספר זה?</h3>

    <table>
        <tr>
            <th>כותרת</th>
            <td>@Html.DisplayFor(model => model.Title)</td>
        </tr>
        <tr>
            <th>מחבר</th>
            <td>@Html.DisplayFor(model => model.Author)</td>
        </tr>
        <tr>
            <th>הוצאה לאור</th>
            <td>@Html.DisplayFor(model => model.Publisher)</td>
        </tr>
        <tr>
            <th>מחיר קנייה</th>
            <td>@Html.DisplayFor(model => model.PriceBuy)</td>
        </tr>
        <tr>
            <th>מחיר השאלה</th>
            <td>@Html.DisplayFor(model => model.PriceBorrow)</td>
        </tr>
        <tr>
            <th>עותקים זמינים</th>
            <td>@Html.DisplayFor(model => model.AvailableCopies)</td>
        </tr>
        <tr>
            <th>פורמט</th>
            <td>@Html.DisplayFor(model => model.Format)</td>
        </tr>
        <tr>
            <th>שנת פרסום</th>
            <td>@Html.DisplayFor(model => model.YearPublished)</td>
        </tr>
        <tr>
            <th>ניתן להשאלה</th>
            <td>
                @if (Model.IsBorrowable)
                {
                    <span class="checkbox-icon">&#10004;</span> <!-- תצוגת V -->
                }
                else
                {
                    <span class="checkbox-icon">&#10008;</span> <!-- תצוגת X -->
                }
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="מחק" class="btn btn-danger" />
            @Html.ActionLink("חזרה לרשימה", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</body>
</html>
